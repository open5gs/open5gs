[Unit]
Description=Open5GS AMF Daemon
After=network-online.target

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/izi-tel/open5gs/install/bin/open5gs-amfd -c /home/izi-tel/open5gs/install/etc/open5gs/amf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
